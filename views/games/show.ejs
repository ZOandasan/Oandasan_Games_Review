<%- include('../partials/header') %>

<section id="show-page">
    <div>Title: <%= game.title %></div>
    <div>
        <% if (game.genre === 'ACT') {%>
            Genre: Action
        <% } else if (game.genre === 'RPG') {%>
            Genre: Roleplaying
        <% } else if (game.genre === 'STR') {%>
            Genre: Strategy
        <% } else if (game.genre === 'SIM') {%>
            Genre: Simulation
        <% } else if (game.genre === 'S&R') {%>
            Genre: Sports/Racing
        <% } else if (game.genre === 'ADV') {%>
            Genre: Adventure
        <% } else if (game.genre === 'CAS') {%>
            Genre: Casual
        <% }; %>
    </div>
    <div>Release Year: <%= game.releaseYear %></div>
    <% if (game.xboxCompatability === true) {%>
    <div>Xbox Compatable</div>
    <% }; %>
    <% if (game.psCompatability === true) {%>
    <div>Playstation Compatable</div>
    <% }; %>
    <% if (game.pcCompatability === true) {%>
    <div>PC Compatable</div>
    <% }; %>    
</section>

<br><br>
<h2>Reviews</h2>
<% if (user) {%>
<form id="add-review-form" method="POST" action="/games/<%= game._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review">
</form>
<% } %>

<% if (game.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Review</th>
          <th>Rating</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% game.reviews.forEach(function(r) { %>
          <% total += r.rating %>
          <tr>
            <td><%= r.createdAt.toLocaleDateString() %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
            <% if (r.userId.equals(user._id)) { %>
              <td>
                <form action="/comments/<%= comment._id %>?_method=DELETE" method="POST">
                  <button type="submit">X</button>
                </form>
              </td>
            <% } %>
          </tr>
        <% }); %>
        <tr>
          <td colspan="2"></td>
          <td><strong><%= (total / game.reviews.length).toFixed(1) %></strong></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>

<%- include('../partials/footer') %>